{
  "name": "generator-easy-wc",
  "version": "0.0.3",
  "description": "File structure and Yarn scripting for developing, testing, documenting, and deploying a web component.",
  "homepage": "",
  "author": {
    "name": "Westbrook Johnson",
    "email": "westbrook.johnson@gmail.com",
    "url": "github.com/westbrook"
  },
  "files": [
    "generators"
  ],
  "main": "generators/index.js",
  "keywords": [
    "web components",
    "generator",
    "yeoman-generator"
  ],
  "devDependencies": {
    "eslint": "^4.1.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-config-xo": "^0.18.2",
    "eslint-plugin-html": "^4.0.5",
    "eslint-plugin-prettier": "^2.2.0",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0",
    "lint-staged": "^4.2.1",
    "nsp": "^2.6.3",
    "prettier": "^1.7.0",
    "release-it": "^7.4.5",
    "yeoman-assert": "^3.1.0",
    "yeoman-test": "^1.7.0"
  },
  "dependencies": {
    "chalk": "^2.1.0",
    "husky": "^1.0.0-rc.13",
    "yeoman-generator": "^3.0.0",
    "yosay": "^2.0.1"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    "prepare": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "release": "release-it --config='config/.release-it.json'",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "git add"
    ],
    "*.json": [
      "prettier --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "xo",
      "prettier"
    ],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": [
      "prettier"
    ]
  },
  "repository": "Westbrook/generator-opinionated-wc",
  "license": "Apache-2.0"
}
